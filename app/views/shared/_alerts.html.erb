<% if flash[:alert] %>
	<%= js add_gritter(flash[:alert], title: "Aaron Robison Portfolio", sticky: false, time: 3000) %>

<% elsif flash[:error] %>
	<%= js add_gritter(flash[:error], title: "Aaron Robison Portfolio", sticky: false, time: 3000) %>

<% else %>
	<%= js add_gritter(flash[:notice], title: "Aaron Robison Portfolio", sticky: false, time: 3000) %>
<% end %>